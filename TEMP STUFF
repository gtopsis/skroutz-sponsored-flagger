function flagSponsoredContent(mutations) {
  if (!mutations) {
    return;
  }
  for (var i = 0; i < mutations.length; i++) {
    const addedNodes = mutations[i].addedNodes;

    if (!addedNodes) {
      return;
    }

    for (const node of addedNodes) {
      if (
        node.tagName === "LI" &&
        !node.classList.contains("flagged-sponsored-product")
      ) {
        const labelElement = node.querySelector(".label-text");
        if (labelElement && labelElement.textContent === "Sponsored") {
          node.classList.add("flagged-sponsored-product");
          visible
            ? node.classList.remove("display-none-sponsored-product")
            : node.classList.add("display-none-sponsored-product");
          labelElement.classList.add("flagged-sponsored-product-label");
        }
      }
    }
  }