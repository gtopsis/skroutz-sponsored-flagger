{
  "name": "Skroutz Sponsored Flagger",
  "description": "Flags sponsored products on Skroutz.gr",
  "version": "1.4",
  "manifest_version": 3,
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://www.skroutz.gr/*"],
      "css": [
        "css/flaggerToogle.css",
        "css/popup.css",
        "css/productFlags.css",
        "css/shelfFlags.css",
        "css/style.css",
        "css/videoFlags.css"
      ],
      "js": [
        "background.js",
        "manipulators/buyThroughSkroutzIndicator.js",
        "manipulators/addBlockedIndication.js",
        "manipulators/separatePromoListFlagger.js",
        "manipulators/videoFlagger.js",
        "manipulators/productFlagger.js",
        "manipulators/removeSponsoredContent.js",
        "manipulators/retrieveLanguage.js",
        "manipulators/retrieveVisibility.js",
        "manipulators/shelfFlagger.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "/assets/icons/48.png",
      "128": "/assets/icons/128.png"
    }
  },
  "icons": {
    "48": "/assets/icons/48.png",
    "128": "/assets/icons/128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "addon.todo@example.com",
      "strict_min_version": "109.0"
    }
  }
  
}
